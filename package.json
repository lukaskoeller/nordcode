{
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "web": "pnpm --filter \"@nordcode/web\" dev",
        "invoice": "pnpm --filter \"@nordcode/invoice\" dev",
        "ui-generator": "pnpm --filter \"@nordcode/ui-generator\" dev",
        "questionnaire-generator": "pnpm --filter \"@nordcode/questionnaire-generator\" dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "gen": "turbo gen workspace",
        "changeset:status": "changeset status",
        "changeset:add": "changeset",
        "changeset:version": "changeset version",
        "changeset:publish": "changeset publish",
        "biome:ui-generator": "biome format apps/ui-generator --write && biome lint apps/ui-generator --apply"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@changesets/cli": "^2.27.1",
        "prettier": "^3.2.5",
        "turbo": "^1.13.2"
    },
    "packageManager": "pnpm@9.6.0",
    "name": "nordcode",
    "engines": {
        "node": ">=18",
        "pnpm": ">=8"
    }
}
