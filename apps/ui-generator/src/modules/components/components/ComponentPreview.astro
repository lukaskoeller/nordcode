---
import SectionTitle from './SectionTitle.astro';
import SourceCodeDisplay
    from './SourceCodeDisplay.astro';

export interface Example {
    title: string;
    description?: string;
    code: string;
}

interface Props {
    component: string;
    title: string;
    sectionId: string;
    description?: string;
    notes?: string[];
    examples?: Example[];
}

const { sectionId, component, description, title, examples, notes } = Astro.props;
---

<section class="nc-stack -contained section-to-observe component-preview" id={sectionId}>
    <div>
        <SectionTitle title={title} nested="true" sectionId={sectionId} />
        {description ? <p class="nc-hint">{description}</p> : null}
    </div>
    <h4>Rendered</h4>
    <div class="nc-box -bordered preview-box">
        <Fragment set:html={component} />
    </div>
    <SourceCodeDisplay code={component} title={title} />
    {
        notes ? (
            <>
                <h4>Notes</h4>
                <ul>
                    {notes.map(note => (
                        <li>
                            <Fragment set:html={note}/>
                        </li>
                    ))}
                </ul>
            </>
        ) : null
    }
    {
        examples ? (
            <>
                <h4>Examples</h4>

                {examples?.map(ex => (
                    <details>
                        <summary>{ex.title}</summary>
                        <div class="nc-stack -contained">
                            {ex.description ? <p class="nc-hint">{ex.description}</p> : null}
                            <div class="nc-box -bordered preview-box">
                                <Fragment set:html={ex.code} />
                            </div>
                            <SourceCodeDisplay code={ex.code} title={ex.title} />
                        </div>
                    </details>
                ))}
            </>
        ) : null
    }
</section>

<style>
    .preview-box {
        background-color: var(--color-surface-base);
        resize: inline;
        max-inline-size: 100%;
        overflow: hidden;
        min-inline-size: 32ch;
    }

    .component-preview {
        padding-block: var(--spacing-base);
        --input-field-min-inline-size: 32ch;
    }
</style>
