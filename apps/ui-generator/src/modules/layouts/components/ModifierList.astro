---
interface Props {
    modifiers: {
        name: string;
        description: string;
    }[];
}

const { modifiers } = Astro.props;
---

<!-- COMPONENT-START: nc-description-list -->
<dl>
    {
        modifiers.map(m => (
            <>
                <dt>
                    <code>{m.name}</code>
                </dt>
                <dd>{m.description}</dd>
            </>
        ))
    }
</dl>
<!-- COMPONENT-END: nc-description-list -->
