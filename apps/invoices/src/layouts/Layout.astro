---
import Logo from "../modules/common/components/Logo.svelte"
import MinimalLayout from "./MinimalLayout.astro"
export interface Props {
    title: string;
}

const {title} = Astro.props;
---

<MinimalLayout title={title}>
    <header class="layout-container">
        <Logo/>
    </header>
    <main class="layout-container">
        <slot/>
    </main>
    <footer class="layout-container">
        Liebe Grüße aus Zeetze & Hamburg
    </footer>
</MinimalLayout>

<style is:global>

    header {
        display: grid;
        place-items: center;
        padding-block: var(--spacing-far);
    }

    footer {
        padding-block: var(--spacing-far);
    }
</style>
