---
import Logo from '../modules/common/components/Logo.svelte';
import MinimalLayout from './MinimalLayout.astro';
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<MinimalLayout title={title}>
    <header class="nc-center page-center-layout">
        <Logo />
    </header>
    <main class="nc-center page-center-layout">
        <slot />
    </main>
    <footer class="nc-center page-center-layout">Liebe Grüße aus Zeetze & Hamburg</footer>
</MinimalLayout>
